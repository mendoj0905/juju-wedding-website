{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "hooks/*": [
        "src/hooks/*"
      ],
      "views/*": [
        "src/views/*"
      ],
      "context/*": [
        "src/context/*"
      ],
      "utils/*": [
        "src/utils/*"
      ],
      "libs/*": [
        "src/libs/*"
      ],
      "config/*": [
        "config/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "public"
  ]
}